extends layout

block content
  h1 #{title}: #{book.title}
  
  if books_authors.length

    p #[strong Delete the following authors before attempting to delete this book.]
  
    div(style='margin-left:20px;margin-top:20px')

      h4 Authors
    
      dl
      each author in books_authors
        dt 
          a(href=author.url) #{author.first_name + ' ' + author.family_name}


    if books_genres.length

        p #[strong Delete the following genres before attempting to delete this book.]
    
        div(style='margin-left:20px;margin-top:20px')

        h4 Genres
        
        dl
        each genre in books_genres
            dt 
            a(href=genre.url) #{genre.name}

  else
    p Do you really want to delete this Book?
    
    form(method='POST' action='')
      div.form-group
        input#authorid.form-control(type='hidden',name='bookid', required='true', value=book._id )

      button.btn.btn-primary(type='submit') Delete